import BrewerPalettes

stream flowers(sepalL, petalW, sepalW, petalL, species, obs)
   from Text["./AndersonsFlowers.csv"]

layer FlowerPlot
guide
 trend[sample: "SIMPLE"] from ID 
 legend[X: 15, Y: -90] from FILL_COLOR
 axis[guideLabel: "Petal Length"] from Y
 axis[guideLabel: "Petal Width"] from X

from flowers
   ID: obs
   X:* Scale[min: 0, max:100](petalL)
   Y:* Scale[min: 0, max:100](petalW) -> Mult(_,-1)
   FILL_COLOR: BrewerColors(species) -> SetAlpha(50,_)
   REGISTRATION: "CENTER"
