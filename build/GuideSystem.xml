<!--If ANTLR3 task is not already installed, this script should be run with
    "-lib ./Library/antlr3-ant.jar" /-->
    
 <project name="GuideSystem" default="Guides">
 	<target name="Guides">
 		<property name="dest" location="${interpreter}"/>
 		<property name="lib" location="${parser}"/>
        <property name="guideGrammars" location="${grammars}/guide"/>
 		
 		<!--Interpreter components-->
 		<antlr
 			target="${interpreter}/UpdateGuides.g"
			outputdirectory="${dest}"
 			libdirectory="${lib}"
 		/>
 		<antlr
 			target="${interpreter}/NeedsGuides.g"
			outputdirectory="${dest}"
 			libdirectory="${lib}"
 		/>
 		
 		<!--Transformation components-->
        <antlr
            target="${guideGrammars}/GuideDefaultRules.g"
            outputdirectory="${parser}"
        />
 		<antlr
 			target="${guideGrammars}/GuideLiftGenerator.g"
			outputdirectory="${parser}"
 		/>
		<antlr
 			target="${guideGrammars}/GuideSampleOp.g"
			outputdirectory="${parser}"
 		/>
 		<antlr
 			target="${guideGrammars}/GuideInsertSeedOp.g"
			outputdirectory="${parser}"
 		/>
 		<antlr
 			target="${guideGrammars}/GuideTransfer.g"
			outputdirectory="${parser}"
 		/>
 		<antlr
 			target="${guideGrammars}/GuideSpecializers.g"
			outputdirectory="${parser}"
 		/>
 		<antlr
 			target="${guideGrammars}/GuideDistinguish.g"
			outputdirectory="${parser}"
 		/>
 		<antlr
 			target="${guideGrammars}/GuideClean.g"
			outputdirectory="${parser}"
 		/>
        <antlr
            target="${guideGrammars}/GuideExtendQuery.g"
            outputdirectory="${parser}"
        /> 	</target>
 </project>