<ModuleData grammarRev="2" name="TupleUtil">
	<Class name="stencil.operator.module.provided.TupleUtil"/>
	<Description><![CDATA[Utilities to manipulate the tuple data representation.]]></Description>

	<Defaults>
		<Opts>
			<Opt specializer="[1 .. n]"/>
		</Opts>
		<Facets>
			<Facet name="Map"  function="true" type="PROJECT" prototype="VALUE"/>
			<Facet name="Query" function="true" type="PROJECT" prototype="VALUE"/>
		</Facets>
	</Defaults>

	<Operator name="Length"/>
	<Operator name="Len" target="Length"/>

	<Operator name="Rename">
		<Facet name="Map" function="true" type="PROJECT" prototype="%"/>
		<Facet name="Query" function="true" type="PROJECT" prototype="%"/>
	</Operator>
</ModuleData>