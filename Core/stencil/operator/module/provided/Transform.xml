<ModuleData grammarRev="2" name="Transform">
	<Class name="stencil.operator.module.provided.Transform"/>
	<Description><![CDATA[Screen/Canvas conversion transformations.]]></Description>
	
	<Defaults>
		<Opts>
			<Opt specializer="[n .. n]"/>
		</Opts>
		<Facets>
			<Facet name="map" type="PROJECT" function="false" prototype="VALUE"/>
			<Facet name="query" type="PROJECT" function="false" prototype="VALUE"/>
			<Facet name="guide" function="true" type="PROJECT" prototype="VALUE"/>
		</Facets>
	</Defaults>
	
	<Operator name="TranslateRegistration"> 
		<Facet name="map" type="PROJECT" function="false" prototype="X,Y"/>
		<Facet name="query" type="PROJECT" function="false" prototype="X,Y"/>
		<Facet name="guide" function="true" type="PROJECT" prototype="X,Y"/>
	</Operator>
	
	<Operator name="ScreenToCanvasPoint">
		<Facet name="map" type="PROJECT" function="false" prototype="X,Y"/>
		<Facet name="query" type="PROJECT" function="false" prototype="X,Y"/>
		<Facet name="guide" function="true" type="PROJECT" prototype="X,Y"/>
	</Operator>
	
	<Operator name="ScreenToCanvasDimension">
		<Facet name="map" type="PROJECT" function="false" prototype="Width,Height"/>
		<Facet name="query" type="PROJECT" function="false" prototype="Width,Height"/>
		<Facet name="guide" function="true" type="PROJECT" prototype="Width,Height"/>
	</Operator>
	
	<Operator name="CanvasToScreenPoint">
		<Facet name="map" type="PROJECT" function="false" prototype="X,Y"/>
		<Facet name="query" type="PROJECT" function="false" prototype="X,Y"/>
		<Facet name="guide" function="true" type="PROJECT" prototype="X,Y"/>
	</Operator>
	
	<Operator name="CanvasToScreenDimension">
		<Facet name="map" type="PROJECT" function="false" prototype="Width,Height"/>
		<Facet name="query" type="PROJECT" function="false" prototype="Width,Height"/>
		<Facet name="guide" function="true" type="PROJECT" prototype="Width,Height"/>
	</Operator>
	
	<Operator name="Zoom">
		<Facet name="map" type="PROJECT" function="false" prototype="zoom,X,Y,width"/>
		<Facet name="query" type="PROJECT" function="false" prototype="zoom,X,Y,width"/>
		<Facet name="guide" function="true" type="PROJECT" prototype="zoom,X,Y,width"/>
	</Operator>
	
	
	<Operator name="ZoomPadded">
		<Facet name="map" type="PROJECT" function="false" prototype="Zoom,X,Y,Width"/>
		<Facet name="query" type="PROJECT" function="false" prototype="Zoom,X,Y,Width"/>
		<Facet name="guide" function="true" type="PROJECT" prototype="Zoom,X,Y,Width"/>
	</Operator>
	
</ModuleData>