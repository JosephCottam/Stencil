STREAM: Stocks
HEADER: Date,Open,High,Low,Close,Volume
SEPARATOR: ,
SOURCE: ./IVDemos/google_stocks.csv
CHECKHEADER: true
STREAM: Mouse
FREQUENCY: -2147483648

LAYER Ticker
STREAM Stocks(Date, High)
	'Google' --> Glyph(ID)
	POLY_LINE --> Glyph(Implantation)
	Date --> TimeStep(VALUE,3) --> Mult(VALUE) --> Glyph(X)
	Open --> Glyph(Y)
	1 --> Glyph(Stroke_Weight)
	BLUE --> Glyph(Stroke_Color)
STREAM Stocks(Date)
	(Canvas.WIDTH, Canvas.HEIGHT, Canvas.X, Canvas.Y) -->
			View(WIDTH, HEIGHT, X,Y)

LAYER Nav
        STREAM Mouse(BUTTON=1, DELTA_X, DELTA_Y, CLICK_COUNT, SHIFT !~'true')
                (DELTA_X,0) --> screenToCanvas.D(View.X, Width) --> Sub(VALUE) --> View(X)
                (0,DELTA_Y) --> screenToCanvas.D(View.Y, Height) --> Sub(VALUE) --> View(Y)
        STREAM Mouse(BUTTON=1, SHIFT=~'true')
                (DELTA_Y, .01) --> MULT(VALUE, View.ZOOM) --> Add(VALUE) --> View(ZOOM)
        STREAM Mouse(BUTTON=1, CLICK_COUNT=3)
		(Canvas.WIDTH, Canvas.HEIGHT, Canvas.X, Canvas.Y) -->
			View(WIDTH, HEIGHT, X,Y)

LEGEND TimeStep(T) BASE Index
