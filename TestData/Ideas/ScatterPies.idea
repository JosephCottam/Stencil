Scatter Pies

layer Pie[r: "COMPOSITE"]
   stream Data(slice, value)

   layer Slices[Slice]
      ID: slice
      OFFSET:* Slices.find(slice) -> SiblingEnd(ChildNum)
      PERCENT: Sum(value) -> Div(value, _) 

   operator SiblingEnd (ChildNum) -> (Offset)
      (ChildNum = 0) => offset: 0
      (ALL) => offset: Sub1(ChildNum) -> Slices.getChild(_) -> EndOffset

stream Data(ID, att1, att2, att3, att4)

layer Pies[r: "Pie", i: "Point"]
consumes Data
   ID: ID
   X: att1
   Y: att2
   slice: att3
   value: att4
   