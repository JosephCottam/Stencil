STREAM: File
NAME: Values
HEADER: Category
SEPARATOR: ,
SOURCE: ./Fruits.txt
SKIP: 0
STRICT: true

stream Values(Category)

layer Chart
guide
   axis[count: 5, round: "T", tickSize: 5, textOffset: 6] Linear from Y
      label.FONT: @Font{10}
      line.PEN: @Stroke{1}
      label.REGISTRATION: "RIGHT"

   axis[tickSize: 5, textOffset: 6] Categorical from X
      label.REGISTRATION: "LEFT"
      label.FONT: @Font{10}
      line.PEN: @Stroke{1} 

from Values
  ID : Count()
  X : Index(Category) -> Add(index, 1) -> Mult(sum, 11)
  Y : Count(Category) -#> Mult(count, -11)
  FILL_COLOR: @Color{BLUE}
  SIZE: 10
  REGISTRATION: "CENTER"

