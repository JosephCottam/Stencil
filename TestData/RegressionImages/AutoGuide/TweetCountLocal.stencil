STREAM: File
NAME: Tweets
HEADER: MESSAGE
SEPARATOR: ,
SOURCE: ./Tweets.txt
SKIP: 1
STRICT: TRUE


external stream Tweets(MESSAGE)

canvas Main
	guide axis[sample="CAT", tickSize=5, textOffset=6] from Counts X
        label.FONT_SIZE: 10
        line.STROKE_WEIGHT: 1 
        label.REGISTRATION: "LEFT"
	

layer Counts
from Tweets
	ID: firstLetter(MESSAGE) -> Letter
	X:* firstLetter(MESSAGE) #-> Rank(Letter) -> Mult(11,VALUE)
	Y: firstLetter(MESSAGE) -> Count(Letter) -> Mult(-11, VALUE)
	REGISTRATION: "BOTTOM"
	SIZE: 10
	
layer Tracking
from Tweets
	view(ZOOM) : Zoom(view[PORTAL_WIDTH], view[PORTAL_HEIGHT], canvas[WIDTH], canvas[HEIGHT]) -> _
	view(X,Y): (canvas[X], canvas[Y])
	

operator firstLetter(Phrase) -> (Letter)
	(all) => Letter: Trim(Phrase) -> Substring(VALUE, 0,1)-> VALUE
