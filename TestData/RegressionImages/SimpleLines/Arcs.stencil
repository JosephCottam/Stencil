stream LineSource(count) : Sequence[0,1,3]

layer Vertical["ARC"]
from LineSource
    ID: count
    X1: Spacing(count) 
    X2: Spacing(count) 
    Y1: 5
    Y2: 10
    ARC_HEIGHT: 20
    PEN_COLOR: Color{GRAY80}
    PEN: Stroke{3}

layer Horizontal["ARC"]
from LineSource
    ID: count
    Y1: Spacing(count) 
    Y2: Spacing(count) 
    X1: -5
    X2: 10
    ARC_HEIGHT: 50
    PEN_COLOR: Color{GRAY80}
    PEN: Stroke{3}


layer Diagonal["ARC"]
from LineSource
    ID: count
    X1: 300
    X2: Spacing(count)  -> Mult(Spacing, 2)
    Y1: 40
    Y2: 50
    PEN_COLOR: Color{GRAY80}
    PEN: Stroke{3}

operator Spacing (ID) -> (V) 
    default => V : Index(ID) -> Mult(Index, 100)

