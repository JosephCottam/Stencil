STREAM: SequenceNumbers
NAME: LineSource
START: 0
STOP: 4
INCREMENT: 1

/*Dead simple test.  Just draws some lines.*/

stream LineSource(count)
 
layer GridLines["LINE"]
from LineSource
    ID: count
    X1: Spacing(count)
    X2: Spacing(count)
    Y1: 5
    Y2: -10
    PEN_COLOR: @Color{GRAY80}
    PEN: @Stroke{3}

operator Spacing (ID) -> (X) 
    default => X : Index(ID) -> Mult(Index, 5)

