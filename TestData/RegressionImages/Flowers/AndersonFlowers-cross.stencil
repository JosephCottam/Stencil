import BrewerPalettes

stream flowers(sepalL, petalW, sepalW, petalL, species, obs)
   : Text["./AndersonsFlowers.csv"]


layer FlowerPlot
guide
 trend[sample: "SIMPLE"] from ID 
 legend[X: 0, Y: 100] Categorical from FILL_COLOR, Categorical from PEN_COLOR
 axis[guideLabel: "Petal Width"] Linear from Y
 axis[guideLabel: "Petal Length"] Linear from X

from flowers
   ID: obs
   X:* Scale[min: 0, max:100](petalL)
   Y:* Scale[min: 0, max:100](petalW)
   FILL_COLOR: BrewerColors(species) -> SetAlpha(50,_)
   PEN_COLOR: Round(petalW) -#> HeatScale(_)
   REGISTRATION: "CENTER"

