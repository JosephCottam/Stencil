STREAM: File
NAME: VertexList
HEADER: ID1,ID2
SEPARATOR: ,
SOURCE: ./ws_400_12_0.1.adj
SKIP: 1
STRICT: true
STREAM: File
NAME: BFS
HEADER: ID
SEPARATOR: ,
SOURCE: ./ws_400_12_0.1.bfs
SKIP: 1
STRICT: true

stream VertexList(ID1, ID2)
stream BFS(ID)

order BFS > VertexList

layer VSM
default
    FILL_COLOR: @Color{RED}
    (SIZE, SHAPE) : (1, "RECTANGLE")
from VertexList
   ID : Concatenate(ID1, ID2) 
   X : Ordering(ID1)
   Y : Ordering(ID2) -> Mult(_, -1)
from VertexList
   ID : Concatenate(ID2, ID1) 
   X : Ordering(ID2) 
   Y : Ordering(ID1) -> Mult(_, -1)
 
layer Prime
from BFS
	() : Ordering(ID) -> ()

operator Ordering (ID) -> (VALUE)
	(ALL) => VALUE : Index(ID) -> VALUE

