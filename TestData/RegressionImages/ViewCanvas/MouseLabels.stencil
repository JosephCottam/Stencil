stream Elements(Name) : Text["../Rotation/RotationData.txt"]
stream Mouse(X, Y) : Mouse

view
from #Render
  (X,Y,W,H) : Center.bounds()


layer Center
from Elements
    ID: Count()
    SHAPE: "CROSS"
    REGISTRATION: "CENTER"
    ROTATION: Count() -> Mult(12.8, Count) -> ToRadians(_)
    X : Count() -> Mult(40, _) -> Add(15,_)
    Y : -100
    SIZE: 30
    FILL_COLOR: Color{BLUE}

layer Labels["TEXT"]
from Elements
   local(id) : Count()
   TEXT: Name
   ID: local.id
   X : Count() -> Mult(40, _) -> Add(15,_)
   Y : -100
   VISIBLE:* Nearest() -> EQ(_, local.id)
   IMPLANT: "POINT"

stream interact()
from Mouse
   (): Center.nearest(X,Y) -> Nearest.set(Center.ID)

operator Nearest : Remember
