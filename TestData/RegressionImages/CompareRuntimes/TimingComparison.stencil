STREAM: File
NAME: times
TUPLE_SIZE: 6
SEPARATOR: \s*,\s*
SOURCE: ./StateVsFlowRuntimes.csv
SKIP: 1
STRICT: true

import BrewerPalettes

stream times(elapse, size, refs, perm, type, i)

layer Runtimes["POLY_POINT"]
guide
  axis Log from Y
  axis Linear from X
  legend from PEN_COLOR
from times
  local(name):  Concatenate(refs, perm, type)
  ID: Count()
  GROUP: local.name
  ORDER: Index(size)
  X: Mult(size,2) -> Scale[0,100](_)
  Y: Split[1](@Avg, local.name, size, elapse) -#> Log(2,_) -> Scale[min:0, max:100](_)
  PEN_COLOR: BrewerColors(local.name)

operator Avg: Range[ALL](@Mean)
