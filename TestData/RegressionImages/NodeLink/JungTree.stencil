import JUNG

stream VertexList (parent, child) : Text["./tree2.tree"]

stream Prime ()
from VertexList
  () : Layout.addEdge(parent,child)

layer Nodes
from VertexList 
    ID: child
    REGISTRATION : "CENTER"
    FILL_COLOR:  Color{BLUE}
    (SHAPE, SIZE) : ("ELLIPSE", 5)
    (X,Y) :* Layout(child)
     
layer Edges["LINE"]
from VertexList 
    ID: Concatenate(parent, child)
    (X1, Y1):* Nodes(parent) -> (Nodes.X, Nodes.Y)
    (X2, Y2):* Nodes(child) ->  (Nodes.X, Nodes.Y)
    PEN_COLOR: Color{GRAY30,80}

layer Labels["TEXT"]
from VertexList
    ID : child
    (X,Y):* Nodes(child) -> (Nodes.X, Nodes.Y)
    TEXT: child
    FONT: Font{10}
    COLOR: Color{GRAY60}

operator Layout : BalloonLayout
