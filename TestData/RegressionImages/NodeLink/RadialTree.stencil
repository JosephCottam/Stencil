STREAM: File
NAME: VertexList
TUPLE_SIZE: 2
SEPARATOR: ,
SOURCE: ./treeMultiRoot.tree
SKIP: 1
STRICT: true

import Layouts

stream VertexList (parent, child)

stream Prime ()
from VertexList
  () : Layout.add(child, parent)

layer Nodes
from VertexList 
    ID: child
    REGISTRATION : "CENTER"
    FILL_COLOR:  Color{BLUE}
    (SHAPE, SIZE) : ("ELLIPSE", 5)
    (X,Y) :* Layout.query(child) -> (Layout.X, Layout.Y)
     
layer Edges["LINE"]
from VertexList 
    ID: Concatenate(parent, child)
    (X1, Y1):* Nodes.find(parent) -> (Nodes.X, Nodes.Y)
    (X2, Y2):* Nodes.find(child) ->  (Nodes.X, Nodes.Y)
    PEN_COLOR: Color{GRAY30,80}

layer Labels["TEXT"]
from VertexList
    ID : child
    (X,Y):* Nodes.find(child) -> (Nodes.X,Nodes.Y)
    TEXT: child
    FONT: Font{10}
    COLOR: Color{GRAY60}


operator Layout : RadialLayout
