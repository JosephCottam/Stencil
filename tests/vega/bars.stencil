(stencil bars
  (table rawData
     (fields x y)
     (data (init ##(x : (list "A","B","C","D","E","F","G","H","I")
                    y : (list 28,55,43,91,81,53,19,79,52)))))
  
   (table transformed
      (fields x width y y2 fill)
      (data (pull rawData
             (let (x : (xscale x))
                  (width: (xscale #(band: true, offset: -1)))
                  (y : (yscale y))
                  (y2 : (yscale 0))
                  (fill : "SteelBlue")))))

   (render marks transformed rect
       (bind auto)
       (guide axis x)
       (guide axis y))
   (react _ marks hover (transient-update (let (fill: "Red"))))
   
   (operator xscale (config (type "ordinal") (range width) (domain rawData.x)))
   (operator yscale (config (range height) (nice true) (domain rawData.y)))

   (view main 
      (canvas 400 200)
      (padding #(top: 10 left: 30, bottom:20, right:10))
      marks))
